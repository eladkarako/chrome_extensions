{ "manifest_version"        : 2
, "minimum_chrome_version"  : "28.0"
, "content_security_policy" : "script-src 'self'; object-src 'self'"

, "browser_specific_settings" : { "gecko":{ "id"                 : "ebay-larger-images-nextgen@eladkarako.com"
                                          , "strict_min_version" : "57.0"
                                          }
                                }

, "default_locale"          : "en_US"
, "name"                    : "__MSG_name_long__"
, "short_name"              : "__MSG_name_shrt__"
, "description"             : "__MSG_name_desc__"

, "version"                 : "1.0.0.2"
, "homepage_url"            : "https://github.com/eladkarako/chrome_extensions/tree/store/eBay-Larger-Images-NextGen/README.md"
, "author"                  : "Elad Karako"


, "permissions"             : ["*://i.ebayimg.com/*"
                              ,"*://www.ebay.com/*"
                              ,"*://www.ebay.co.uk/*"
                              ,"declarativeNetRequest"
                              ]

,"declarative_net_request"  : { "rule_resources": ["resources/background_network_rules.json"] }

,"icons"                    : { "128": "resources/icon.png" }
,"browser_action"           : {
                              }
}
